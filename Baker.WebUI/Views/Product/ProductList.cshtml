@model List<Baker.WebUI.Dtos.Product.ProductWithCategoryDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

 <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> ÜRÜNLER </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="#">Tablo</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Ürün Listesi</li>
                </ol>
              </nav>
            </div>
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Ürün Listem</h4>
                    <p class="card-description">
                        <a href="#" class="btn btn-primary">Yeni Ürün Girişi</a>
                    </p>
                    <table class="table">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Ürün ismi</th>
                          <th>Fiyatı</th>
                          <th>Kategorisi</th>
                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in Model)
                            {
                           
                        <tr>
                          <td>@item.productId</td>
                           <td>@item.name</td>
                          <td>@item.price</td>
                          <td><label class="badge badge-danger">@item.categoryName</label></td>
                        </tr>
                            }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
             
            </div>
          </div>

